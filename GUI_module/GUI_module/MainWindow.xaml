<Window x:Class="GUI_module.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_module"
        mc:Ignorable="d"
        Title="Вход" Height="350" Width="525" MinHeight="400" MinWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" HorizontalAlignment="Center">Фамилия, имя, група</Label>
        <TextBox Grid.Row="2" HorizontalAlignment="Center" Margin="100,0,100,0" Width="200"></TextBox>
        <Expander x:Name="expander" Header="Администратор?" HorizontalAlignment="Center" Margin="10,10,10,10" Grid.Row="3" VerticalAlignment="Top">
            <Grid Background="#FFE5E5E5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" HorizontalAlignment="Center">Пароль</Label>
                <PasswordBox  Grid.Row="1" Width="200"></PasswordBox>
            </Grid>
        </Expander>
        <Button Grid.Row="4" Margin="100,0,100,0" Width="200" x:Name="EnterButton">Вход</Button>
        <Label Grid.Row="5" HorizontalAlignment="Center">
            <TextBlock TextDecorations="Underline" Foreground="Blue">
                Теоретические сведения
            </TextBlock></Label>
    </Grid>
</Window>
