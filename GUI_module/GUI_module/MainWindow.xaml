<Window x:Class="GUI_module.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:GUI_module="clr-namespace:GUI_module"
        xmlns:prism="clr-namespace:Microsoft.Practices.Prism.M
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_module"
        mc:Ignorable="d"
        Title="Вход" Height="350" Width="525" MinHeight="400" MinWidth="450"
        d:DataContext="{d:DesignInstance GUI_moduleL:Main,IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" HorizontalAlignment="Center">Фамилия, имя, група</Label>
        <TextBox Grid.Row="2" HorizontalAlignment="Center" Margin="100,0,100,0" Width="200">Петров Никита, 112352</TextBox>
        <Expander x:Name="expander" Header="Администратор?" HorizontalAlignment="Center" Margin="10,10,10,10" Grid.Row="3" VerticalAlignment="Top" IsExpanded="False">
            <StackPanel Background="#FFE5E5E5">
                <Label HorizontalAlignment="Center">Пароль</Label>
                <PasswordBox   Width="200" Password="gfvjhv"></PasswordBox>
                <TextBlock x:Name="textBlock" Text="Неверный пароль" FontSize="14.667" Foreground="#FFF70F0F" />
                <Button Width="200" x:Name="LoginButton">Вход</Button>
            </StackPanel>    
        </Expander>
        <Button Grid.Row="4" Margin="100,0,100,0" Width="200" x:Name="EnterButton">Приступить к выполению опытов</Button>
        <Label Grid.Row="5" HorizontalAlignment="Center">
            <TextBlock TextDecorations="Underline" Foreground="Blue">
                Теоретические сведения
            </TextBlock>
        </Label>
        </Grid>
</Window>
