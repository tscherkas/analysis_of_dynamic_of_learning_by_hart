<Window x:Class="GUI_module.Tests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tests" Height="550" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="217*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <DataGrid HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="500" Width="680">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Опыт" Width="2*"/>
                <DataGridTextColumn Header="Тип предъявления" Width="1*"/>
                <DataGridTextColumn Header="Описание" Width="3*"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <Button Content="Добавить" Grid.Column="1" HorizontalAlignment="Left" Margin="26,33,0,0" VerticalAlignment="Top" Width="190" Click="Button_Click_1"/>
        <Button Content="Изменить" Grid.Column="1" HorizontalAlignment="Left" Margin="26,74,0,0" VerticalAlignment="Top" Width="190"/>
        <Button Content="Ряд..." Grid.Column="1" HorizontalAlignment="Left" Margin="26,115,0,0" VerticalAlignment="Top" Width="190"/>
        <Button Content="Удалить" Grid.Column="1" HorizontalAlignment="Left" Margin="26,165,0,0" VerticalAlignment="Top" Width="190"/>

    </Grid>
</Window>
