<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_module"
        x:Class="GUI_module.Theory"
        mc:Ignorable="d"
        Title="Кратние теоритические сведения" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


      <RichTextBox>
        <FlowDocument Name="fld">
          <Paragraph>Привет от мира редактируемых документов!</Paragraph>
        </FlowDocument>
      </RichTextBox>


      <StackPanel Grid.Column="1"   Margin="10,10,10,10" >
            <Button x:Name="PreviewButton" Content="Просмотреть" Margin="5,10" Padding="5,10"/>
            <Button x:Name="SaveButton" Content="Сохранить" Margin="5,10" Padding="5,10"/>
            <Button x:Name="ImageInsertButton" Content="Image..." Margin="5,10" Padding="5,10"/>
        </StackPanel>



    </Grid>
</Window>
