<Window x:Class="GUI_module.AdminStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_module"
        mc:Ignorable="d"
        Title="AdminStartWindow" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button x:Name="TestsButton" Content="Опыты" Margin="0,10" Padding = "10,10"/>
            <Button x:Name="ItemsButton" Content="Ряды" Margin="0,10"  Padding = "10,10"/>
            <Button x:Name="ResultsButton" Content="Результаты" Margin="0,10" Padding = "10,10"/>
            <Button x:Name="TheoryButton" Content="Теория" Margin="0,10" Padding = "10,10"/>
        </StackPanel>

    </Grid>
</Window>
